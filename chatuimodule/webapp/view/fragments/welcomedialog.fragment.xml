<core:FragmentDefinition
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:f="sap.f"
>
    <l:VerticalLayout
        id="containerLayout"
        width="100%"
    >
        <l:BlockLayout>
            <l:BlockLayoutRow>
                <l:BlockLayoutCell>
                    <FlexBox
                        justifyContent="Center"
                        wrap="Wrap"
                    >
                        <Image
                            mode="Image"
                            height="9rem"
                            width="9rem"
                            src="/image/chatimage.png"
                        />
                    </FlexBox>
                    <Title
                        level="H4"
                        titleStyle="H4"
                        text="Welcome to chat with SAC!"
                        width="100%"
                        textAlign="Center"
                    />
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>

            <l:BlockLayoutRow id="parentGrp">
                <l:BlockLayoutCell
                    backgroundColorSet="{/colorSet}"
                    backgroundColorShade="{/shades/0}"
                >
                    <Title
                        level="H5"
                        titleStyle="H5"
                        text="Kindly select the module"
                    />
                    <FlexBox
                        items="{/features}"
                        justifyContent="Start"
                        wrap="Wrap"
                        class="sapUiSmallMarginTop sapUiSmallMarginEnd"
                    >
                        <ObjectStatus
                            text="{text}"
                            class="sapUiTinyMarginEnd"
                            press=".onPress"
                            active="true"
                            inverted="true"
                            state="Indication04"
                        />
                    </FlexBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow
                visible="false"
                id="setGrp"
            >
                <l:BlockLayoutCell
                    backgroundColorSet="{/colorSet}"
                    backgroundColorShade="{/shades/0}"
                >
                    <FlexBox
                        items="{/Set}"
                        justifyContent="Start"
                        wrap="Wrap"
                        class="sapUiMediumMarginEnd"
                    >
                        <ObjectStatus
                            class="sapUiTinyMarginEnd"
                            text="{text}"
                            active="true"
                            inverted="true"
                            press=".onPress"
                            state="Indication03"
                        />
                    </FlexBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
            <l:BlockLayoutRow
                visible="false"
                id="optionGrp"
            >
                <l:BlockLayoutCell
                    backgroundColorSet="{/colorSet}"
                    backgroundColorShade="{/shades/0}"
                >
                    <FlexBox
                        items="{/Options}"
                        justifyContent="Start"
                        wrap="Wrap"
                        class="sapUiMediumMarginEnd"
                    >
                        <ObjectStatus
                            class="sapUiTinyMarginEnd"
                            text="{text}"
                            active="true"
                            inverted="true"
                            press=".onPress"
                            state="Indication05"
                        />
                    </FlexBox>
                </l:BlockLayoutCell>
            </l:BlockLayoutRow>
        </l:BlockLayout>
   </l:VerticalLayout>
     
</core:FragmentDefinition>
