<core:FragmentDefinition
    xmlns="sap.m"
    class="sapUiSizeCompact"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="insightsDialog"
        icon="sap-icon://business-objects-experience"
        titleAlignment="Center"
        type="Message"
        contentWidth="45%"
        contentHeight="16%"
        title="Insights"
    >
        <content>
            <l:VerticalLayout
                class="sapUiContentPadding"
                width="100%"
            >
                <l:content>
                    <core:HTML content='&lt;p&gt;Coming Soon......
&lt;/p&gt;' />
                </l:content>
            </l:VerticalLayout>
        </content>

        <footer>
            <Toolbar>
                <content>
                    <ToolbarSpacer />
                    <Button
                        type="Emphasized"
                        text="Email"
                        press=".pressInsightEmail"
                    />
                    <Button
                        text="Close"
                        type="Reject"
                        press=".onInsightsDialogClose"
                        ariaHasPopup="Dialog"
                    />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
